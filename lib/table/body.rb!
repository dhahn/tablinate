module Body
 def build_tbody
    tbody = Tag.new("tbody").assign_parameters(params)
    tr_offset = 0
      tbody.append_sub_tag(tr)
    end
    tbody.append_end_tag
    return tbody
 end

 def build_tbody_rows(rows, params, offset=0)
  rows.each do |row|
    tr = Tag.new("tr").assign_parameters(params[:tbody], offset)
    tr.append_sub_tag(build_tbody_values(row, params[:tbody])
    tr.append_end_tag
    tr_offset += 1
   end
 end

 def build_tbody_row(row)
      td_offset = 0
      row.each do |k,v|
        td = Tag.new("td").assign_parameters(params[:tbody], offset)
        td.append_value(v)
        td.append_end_tag 
        td_offset += 1
        tr.append_sub_tag(td)
      end
 end
end
